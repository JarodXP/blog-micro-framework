<!-- Networks Widget -->
<div class="card my-4">
    <h5 class="card-header">Réseaux</h5>
    <div class="card-body d-flex flex-row justify-content-between align-items-center">

        {% if networks is not empty %}
            {% for network in networks %}
                <a href={{ network.link }}><img class="sidebar-network" src="{{ '/assets/uploads/'~network.iconFileName }}"
                                                alt="{{ network.alt }}"></a>
            {% endfor %}
        {% else %}
            <p>Aucun réseau enregistré.</p>
        {% endif %}
    </div>
</div>