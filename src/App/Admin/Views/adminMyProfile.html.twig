{% extends 'mainAdmin.html.twig' %}

{% block title %}Admin - Mon Profil{% endblock %}

{% block mainContent %}

    <div class="row admin-content">

        <h1 class="col-12 text-center">Mon Profil</h1>

        <h2 class="col-12 text-center mt-4 mt-md-5">{{ user.username }}</h2>

        <form action="/admin/my-profile/register" method="post" id="profileForm" class="col-12 col-md-10 offset-md-1 admin-form" enctype="multipart/form-data">
            <input type="hidden" name="username" value={{ user.username }}>

            <div id="profileSectionAvatar" class="row form-section d-flex align-items-center ">

                <div class="col-12 col-md-2">
                    <div class="row">
                        <p class="col-12">Avatar</p>
                        <div id="adminProfileAvatar" class="col-12 imageDiv"
                             style="background-image: url({{ ('/assets/uploads/'~avatar.fileName) | defaultAvatar }});">
                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-10">
                    <div class="form-group col-12 col-md-10 offset-md-1">
                        <label for="avatarImageFile" class="col-12">Télécharger un fichier</label>
                        <input type="hidden" name="MAX_FILE_SIZE" value="300000" />
                        <input id="avatarImageFile" name="avatarImageFile" type="file" class="col-12 form-control">
                        <div id="avatarFileName" class="col-12">Fichier actuel : {{ avatar.originalName }}</div>
                    </div>
                </div>
            </div>

            <div id="profileSectionInfo" class="row form-section ">
                <div class="col-12">
                    <div class="row d-flex justify-content-between align-items-center">
                        <div class="form-group col-12 col-md-6">
                            <label for="firstName" class="col-12 text-center">Prénom</label>
                            <input id="firstName" type="text" name="firstName" class="col-12 col-md-8 offset-md-2 form-control text-center" value="{{ user.firstName }}">
                        </div>

                        <div class="form-group col-12 col-md-6">
                            <label for="lastName" class="col-12 text-center">Nom</label>
                            <input id="lastName" type="text" name="lastName" class="col-12 col-md-8 offset-md-2 form-control text-center" value="{{ user.lastName }}">
                        </div>

                        <div class="form-group col-12 col-md-6">
                            <label for="email" class="col-12 text-center">Email</label>
                            <input id="email" type="email" name="email" class="col-12 col-md-8 offset-md-2 form-control text-center" value="{{ user.email }}">
                        </div>

                        <div class="form-group col-12 col-md-6">
                            <label for="phone" class="col-12 text-center">Téléphone</label>
                            <input id="phone" type="tel" name="phone" class="col-12 col-md-8 offset-md-2 form-control text-center" value="{{ user.phone }}">
                        </div>

                        <div class="form-group col-12 text-center">
                            <button type="submit" class="btn btn-danger" formaction="/admin/change-password-form"
                                    formmethod="post">Changer mon mot de passe</button>
                        </div>
                    </div>
                </div>
            </div>

            <div id="profileSectionText" class="row form-section ">
                <div class="form-group col-12 col-md-10 offset-md-1">
                    <label for="baseline" class="col-12">Phrase d'accroche</label>
                    <input id="baseline" type="text" name="baseline" class="col-12 form-control" value="{{ user.baseline }}">
                </div>

                <div class="form-group col-12 col-md-10 offset-md-1">
                    <label for="introduction" class="col-12">Présentation</label>
                    <textarea id="introduction"  name="introduction" class="col-12 form-control tiny-area" rows="30">
                        {{ user.introduction }}
                    </textarea>
                </div>
            </div>

            <div id="profileSectionButtons" class="row form-section">
                <div class="col-10 offset-1">
                    <div class="form-submit">
                        <p><button type="submit" class="btn btn-success">Enregistrer</button></p>
                        <p><button type="submit" class="btn btn-secondary" formaction="/admin/">Retour</button></p>
                    </div>
                </div>
            </div>

        </form>
    </div>

{% endblock %}
