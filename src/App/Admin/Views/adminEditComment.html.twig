{% extends 'mainBack.html.twig' %}

{% block mainContent %}

    <div class="row admin-content">

        <h1 class="col-12 text-center">
            Modérer le commentaire 1 de l'article "Un article"
        </h1>

        <h2 class="col-12 text-center mt-4 mt-md-5">Commentaire ajouté le 14/01/2020
            par Wawa</h2>

        <form action="/admin/comments/comment-0" method="post" id="postForm" class="col-12 col-md-10 offset-md-1 admin-form">

            <div class="row form-section">
                <div class="form-group col-12 col-md-10 offset-md-1">
                    <label for="content" class="col-12">Commentaire</label>
                    <textarea id="content" name="content" rows="5" cols="50" class="col-12 form-control">Très bon article</textarea>
                </div>
            </div>

            <div class="row form-section">
                <div class="col-12 form-group text-center">
                    <p>
                        <label for="check-visible">Actuellement : Publié</label>
                    </p>
                    <p><span class="font-italic">Changer le statut : </span>
                        <input id="check-visible" type="checkbox" name="status" value=1 data-toggle="toggle"
                               data-offstyle="dark">
                    </p>
                </div>
            </div>

            <div class="row form-section">
                <div class="col-10 offset-1">
                    <div class="form-submit">
                        <p><button type="submit" class="btn btn-success">Enregistrer</button></p>
                        <p><button type="submit" class="btn btn-danger" formaction="/admin/comments/remove=1"
                                   formmethod="post">Supprimer</button></p>
                        <p><button type="submit" class="btn btn-secondary" formaction="/admin/comments">Retour</button></p>
                    </div>
                </div>
            </div>

        </form>

    </div>

{% endblock %}
