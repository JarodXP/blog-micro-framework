{% extends 'mainBack.html.twig' %}

{% block mainContent %}

    <div class="row admin-content">

        <h1 class="col-12 text-center">Nouvel article</h1>

        <form action="" method="post" id="postForm" class="col-12 col-md-10 offset-md-1 admin-form" enctype="multipart/form-data">

            <section id="postSectionInfo" class="row form-section ">
                <div class="form-group col-10 offset-1">
                    <label for="author" class="col-12">Auteur</label>
                    <input id="author" type="text" name="author" class="col-12 form-control"
                           value ="Greg" readonly>
                </div>

                <div class="form-group col-10 offset-1">
                    <label for="title" class="col-12">Titre</label>
                    <input id="title" type="text" name="title" class="col-12 form-control" placeholder="Titre">
                </div>
            </section>

            <section id="postSectionText" class="row form-section ">
                <div class="form-group col-10 offset-1">
                    <label for="extract" class="col-12">Extrait</label>
                    <textarea id="extract" name="extract" class="col-12 form-control" rows="5" placeholder="Extrait, maximum 140 caractères"></textarea>
                </div>

                <div class="form-group col-10 offset-1">
                    <label for="content" class="col-12">Contenu</label>
                    <textarea id="content" name="content" class="col-12 form-control tiny-area" rows="30"></textarea>
                </div>
            </section>

            <section id="postSectionMainImage" class="row form-section ">
                <div class="col-10 offset-1">
                    <div class="row">
                        <div class="col-2">
                            <label for="postImage" class="col-12">Image du post</label>
                            <div id="adminPostHeader" class="col-12 imageDiv" style="background-image: url('/assets/images/icons/empty-image.png')">
                            </div>
                        </div>
                        <div class="col-10">
                            <div class="form-group col-10 offset-1">
                                <label for="mainImageFile" class="col-12">Télécharger un fichier</label>
                                <input type="hidden" name="MAX_FILE_SIZE" value="300000" />
                                <input id="imageFile" name="mainImageFile" type="file" class="col-12 form-control">
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <section id="postSectionStatus" class="row form-section ">
                <div class="form-group col-12 text-center">
                    <p>
                        <label for="check-visible">Actuellement : Non publié</label>
                    </p>
                    <p><span class="font-italic">Changer le statut : </span>
                        <input id="check-visible" type="checkbox" name="status" value=1 data-toggle="toggle"
                               data-offstyle="dark">
                    </p>
                </div>
            </section>

            <section id="postSectionSubmit" class="row form-section ">
                <div class="form-group col-12 text-center">
                    <button type="submit" class="btn btn-success">Enregistrer</button>
                    <button type="submit" class="btn btn-danger" formaction="/admin/posts/remove=0"
                            formmethod="post">Supprimer</button>
                    <button type="submit" class="btn btn-secondary" formaction="/admin/">Retour</button>
                </div>
            </section>
        </form>

    </div>

{% endblock %}
