{% extends 'mainAdmin.html.twig' %}

{% block title %}Admin - Articles{% endblock %}

{% block mainContent %}

    <div class="row admin-content">

        <h1 class="col-12 text-center">Liste des articles</h1>

        <p class="col-12 col-md-10 offset-md-1 text-left mt-4 mt-md-5"><a class="btn btn-info" href="/admin/posts/new-post">Nouvel article</a></p>

        <table class="col-12 col-md-10 offset-md-1 table table-hover table-responsive-lg table-sm admin-table">
            <thead>
            <tr>
                <th class="col-2 admin-table-header"><a href = ""> Titre </a></th>
                <th class="col-2 admin-table-header"><a href = ""> Auteur</a></th>
                <th class="col-2 admin-table-header"><a href = ""> Créé le </a></th>
                <th class="col-2 admin-table-header"><a href = ""> Modifié le </a></th>
                <th class="col-2 admin-table-header"><a href = ""> Statut </a></th>
                <th class="col-2 admin-table-header" scope="col">Image</th>
                <th class="col-2 admin-table-header" scope="col"></th>
            </tr>
            </thead>

            <tbody>

            {% for post in posts %}

                <tr>
                    <td class="col-2 align-middle">{{ post.title }}</td>
                    <td class="col-2 align-middle">{{ post.username }}</td>
                    <td class="col-2 align-middle">{{ post.date_added | date("d/m/Y") }}</td>
                    <td class="col-2 align-middle">{{ post.date_modified | date("d/m/Y")}}</td>
                    <td class="col-2 align-middle">{{ post.status }}</td>
                    <td class="col-2 align-middle table-image">
                        <div class="imageDiv" style="background-image: url({{ '/assets/uploads/'~post.file_name }})"></div>
                    </td>
                    <td class="col-2 icon-edit">
                        <div class="d-flex flex-row justify-content-between">
                            <p class="modif-icon mx-2"><a href = {{ '/admin/posts/post-'~post.id }}><i class="far fa-edit"></i></a></p>
                            <p class="modif-icon mx-2"><a href = {{ '/admin/posts/remove='~post.id }}><i class="far fa-trash-alt"></i></a></p>
                        </div>
                    </td>
                </tr>

            {% endfor %}

            </tbody>
        </table>

        <div id="tableRange" class="col-12 text-center">

            <div class="row">
                <div class="form-group col-2">
                    <label for="rangeLimit">Nombre d'articles par page</label>

                    <select id="rangeLimit" name="limit" class="form-control">
                        <option>5</option>
                        <option>10</option>
                        <option>25</option>
                        <option>100</option>
                    </select>
                </div>
            </div>

            <div class="col-10">
                <!--Displays the anchor arrows in regards of the number of posts-->
                <p class="">
                    <a href=""><i class="far fa-caret-square-left"></i></a>
                    Page {{ page }}
                    <a href=""><i class="far fa-caret-square-right"></i></a>
                </p>
            </div>


        </div>



    </div>

{% endblock %}

