{% extends 'mainFront.html.twig' %}

{% block title %}Mon Profile{% endblock %}

{% block metaDescription %}Vous cherchez un développeur PHP / Symfony,
    alors venez voir mon site et contactez-moi, je suis toujours à la recherche de nouveaux projets.{% endblock %}

{% block mainContent %}

    <!-- Profile Content Column -->
    <div class="row front-content">
        <div id="avatar" class="col-4 offset-4" style="background-image: url({{ avatar.fileName }});"></div>

        <h1 id="ownerName" class="col-12 text-center">{{ profile.firstName }} {{ profile.lastName }}</h1>

        <h2 id="ownerTitle" class="col-12 text-center">{{ profile.title }}</h2>

        <p id="baseline" class="col-12 text-center">{{ profile.baseline }}</p>

        <h3 class="col-12 text-left">Présentation :</h3>

        <p id="introduction" class="col-12">{{ profile.introduction }}</p>

        <p class="col-6 text-center link-btn"><a class="btn btn-primary" href="/contact" target="_blank">Contact</a></p>

        <p class="col-6 text-center link-btn"><a class="btn btn-primary" href={{ resume.fileName }} target="_blank">CV</a></p>

    </div>

{% endblock %}

